<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <TextView
        android:text="채팅을 시작하세요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLastMessage"
        android:layout_marginLeft="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvName" />

    <TextView
        android:text="2016-01-01 12:00"
        android:textSize="8sp"
        android:id="@+id/tvLastDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/ivTumbnail"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvAlarm"
        android:text="새 메세지"
        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:text="name"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:layout_alignBaseline="@+id/tvLastMessage"
        android:layout_alignBottom="@+id/tvLastMessage"
        android:layout_toEndOf="@+id/ivTumbnail"
        android:layout_marginStart="16dp" />

</RelativeLayout>